<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:typeface">normal</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textColorHint">@color/md_white_1000_50</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="HelloBtnTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_18sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.AppCompat.EditText.HrlloDemoEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/txt_primary</item>

    </style>


    <style name="Widget.AppCompat.EditText.HelloDemoEditText">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/edit_text_border</item>
        
    </style>


    <style name="LeftDrawable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/edit_text_drawable_border</item>
        <item name="android:padding">@dimen/_12sdp</item>
    </style>


    <style name="music_recycler_view_item_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="music_recycler_view_list_item_btn_image">
        <item name="android:layout_width">@dimen/_14sdp</item>
        <item name="android:layout_height">@dimen/_14sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:ems">50</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="music_title_style">
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="myButtonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">#ffff</item>
    </style>
    <style name="player_button_style">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="player_button_style_1">
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="player_time_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:textColor">@color/txt_primary</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/_150sdp</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#EEEEEE</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
