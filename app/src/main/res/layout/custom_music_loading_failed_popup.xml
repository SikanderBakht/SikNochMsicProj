<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/loading_failed_popup_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:src="@drawable/no_connection" />


        <com.hellodemo.ui.MemphisTextView
            android:id="@+id/main_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:text="Music Loading Failed"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/colorPrimaryBlack"
            android:textColorLink="@android:color/white"
            android:textSize="17sp"
            android:textStyle="bold" />


        <com.hellodemo.ui.MemphisTextView
            android:id="@+id/sub_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0sp"
            android:scrollHorizontally="false"
            android:text="Choose the name you want people to find you by. We suggest you choose your full name or artist name."
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/colorPrimaryBlack"
            android:textColorLink="@android:color/white"
            android:textAlignment="center"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@color/txt_secondary"/>

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:weightSum="2">

            <com.hellodemo.ui.MemphisTextView
                android:id="@+id/Cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="12sp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/md_black_1000_50"
                android:textSize="12sp" />

            <com.hellodemo.ui.MemphisTextView
                android:id="@+id/Retry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12sp"
                android:text="Retry"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>