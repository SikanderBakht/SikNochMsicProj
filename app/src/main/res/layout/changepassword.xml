<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:src="@drawable/back_icon" />

            <com.hellodemo.ui.MemphisTextView
                android:id="@+id/toolbar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Password"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_margin="10sp"
        android:orientation="vertical">

        <com.hellodemo.ui.MemphisTextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="20sp"
            android:text="OLD PASSWORD"
            android:textColor="@color/md_black_1000"
            android:textSize="12sp" />

        <com.hellodemo.ui.MemphisEditTextView
            android:id="@+id/oldpassword"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:background="@drawable/edit_text_border"
            android:hint=" Type the old password here..."
            android:padding="12sp"
            android:maxLines="1"
            android:textColor="@color/md_black_1000"
            android:textSize="12sp" />

        <com.hellodemo.ui.MemphisTextView
            android:id="@+id/memphisTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="NEW PASSWORD"
            android:textColor="@color/md_black_1000"
            android:textSize="12sp" />

        <com.hellodemo.ui.MemphisEditTextView
            android:id="@+id/newpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:background="@drawable/edit_text_border"
            android:hint=" Type the new password here..."
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="12sp"
            android:textColor="@color/md_black_1000"
            android:textSize="12sp" />

        <com.hellodemo.ui.MemphisTextView
            android:id="@+id/memphisTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="CONFIRM NEW PASSWORD"
            android:textColor="@color/md_black_1000"
            android:textSize="12sp" />

        <com.hellodemo.ui.MemphisEditTextView
            android:id="@+id/confirmnewpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:maxLines="1"
            android:hint=" Type the new password here to confirm..."
            android:inputType="textPassword"
            android:padding="12sp"
            android:textColor="@color/md_black_1000"
            android:textSize="12sp" />


    </LinearLayout>


    <com.hellodemo.ui.MemphisTextView
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="12sp"
        android:text="SAVE"
        android:textColor="#ffffff"
        android:textSize="12sp" />
</RelativeLayout>
