<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/topview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">


            <LinearLayout
                android:id="@+id/fragment_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    tools:context="com.hellodemo.RegisterActivity">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:contentDescription="@string/action_sign_in_short"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/icon_hello" />

                    <LinearLayout
                        android:id="@+id/linear0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView">

                        <ImageView
                            android:id="@+id/imgViewUsername"
                            style="@style/LeftDrawable"
                            app:srcCompat="@drawable/icon_email" />

                        <com.hellodemo.ui.MemphisEditTextView
                            android:id="@+id/username"
                            style="@style/Widget.AppCompat.EditText.HrlloDemoEditText"
                            android:hint="@string/username"
                            android:inputType="textEmailAddress"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linear0"
                        tools:layout_editor_absoluteY="175dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            style="@style/LeftDrawable"
                            app:srcCompat="@drawable/icon_email" />

                        <com.hellodemo.ui.MemphisEditTextView
                            android:id="@+id/email"
                            style="@style/Widget.AppCompat.EditText.HrlloDemoEditText"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linear1">

                        <ImageView
                            android:id="@+id/imageView3"
                            style="@style/LeftDrawable"
                            app:srcCompat="@drawable/icon_password" />

                        <com.hellodemo.ui.MemphisEditTextView
                            android:id="@+id/password"
                            style="@style/Widget.AppCompat.EditText.HrlloDemoEditText"
                            android:hint="@string/password"
                            android:inputType="textPassword" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linear2">

                        <ImageView
                            android:id="@+id/imageView4"
                            style="@style/LeftDrawable"
                            app:srcCompat="@drawable/icon_password" />

                        <com.hellodemo.ui.MemphisEditTextView
                            android:id="@+id/confirm_password"
                            style="@style/Widget.AppCompat.EditText.HrlloDemoEditText"
                            android:hint="@string/confirm_password"
                            android:inputType="textPassword" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/line4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/line3">

                        <ImageView
                            android:id="@+id/imageView44"
                            style="@style/LeftDrawable"
                            app:srcCompat="@drawable/icon_password" />

                        <com.hellodemo.ui.MemphisEditTextView
                            android:id="@+id/redeem_code"
                            style="@style/Widget.AppCompat.EditText.HrlloDemoEditText"
                            android:hint="Invite Code"
                            android:inputType="textPassword" />
                    </LinearLayout>

                    <com.hellodemo.ui.MemphisTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:text="(If you have one)"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.195"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/line4" />

                    <com.hellodemo.ui.MemphisTextView
                        android:id="@+id/login"
                        style="@style/HelloBtnTextView"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:background="@drawable/hello_button_selector"
                        android:text="@string/sign_up"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/line4" />

                    <LinearLayout
                        android:id="@+id/linear3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/login">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@color/txt_secondary" />

                        <com.hellodemo.ui.MemphisTextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_8sdp"
                            android:text="or" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@color/txt_secondary" />
                    </LinearLayout>

                    <com.hellodemo.ui.MemphisTextView
                        android:id="@+id/facebook_login"
                        style="@style/HelloBtnTextView"
                        android:background="@drawable/facebook_button"
                        android:text="@string/sign_up_with_facebook"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linear3"
                        custom:fontType="medium" />

                    <com.hellodemo.ui.MemphisTextView
                        android:id="@+id/already_have_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:text="@string/already_have_an_account_login"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/facebook_login" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/loading_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#a1a1a1"
                android:paddingBottom="50dp">

                <ImageView
                    android:id="@+id/loading_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/loader_animation" />
            </RelativeLayout>

        </RelativeLayout>
    </FrameLayout>
</ScrollView>
