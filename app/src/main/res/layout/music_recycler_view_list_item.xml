<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/music_recycler_view_swipe_layout"
    app:clickToClose="true">

    <LinearLayout
        android:id="@+id/right_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/favorite"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/favourite_image_view"
                style="@style/music_recycler_view_list_item_btn_image"
                android:layout_marginBottom="8dp"
                android:text="Skrilex and Dipplo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35000002"
                app:srcCompat="@drawable/ic_favorite_border_white_18dp" />

            <com.hellodemo.ui.MemphisTextView
                android:id="@+id/txt_favourite"
                style="@style/music_recycler_view_item_btn"
                custom:fontType="light"
                android:paddingTop="4dp"
                android:text="@string/favorite"
                app:layout_constraintEnd_toEndOf="@+id/favourite_image_view"
                app:layout_constraintStart_toStartOf="@+id/favourite_image_view"
                app:layout_constraintTop_toBottomOf="@+id/favourite_image_view" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/notes"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:background="#304055">

            <ImageView
                android:id="@+id/notes_img"
                style="@style/music_recycler_view_list_item_btn_image"
                android:layout_marginBottom="9dp"
                android:text="Skrilex and Dipplo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35000002"
                app:srcCompat="@drawable/icon_notes" />

            <com.hellodemo.ui.MemphisTextView
                style="@style/music_recycler_view_item_btn"
                custom:fontType="light"
                android:layout_marginTop="5dp"
                android:text="NOTES"
                app:layout_constraintEnd_toEndOf="@+id/notes_img"
                app:layout_constraintStart_toStartOf="@+id/notes_img"
                app:layout_constraintTop_toBottomOf="@+id/notes_img" />
        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/message"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:background="@color/color_message_bg">

            <ImageView
                android:id="@+id/imageView8"
                style="@style/music_recycler_view_list_item_btn_image"
                android:layout_marginBottom="6dp"
                android:text="Skrilex and Dipplo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35000002"
                app:srcCompat="@drawable/ic_msg" />

            <com.hellodemo.ui.MemphisTextView
                style="@style/music_recycler_view_item_btn"
                custom:fontType="light"
                android:text="@string/message"
                app:layout_constraintEnd_toEndOf="@+id/imageView8"
                app:layout_constraintStart_toStartOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/imageView8" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/forward"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:background="@color/color_forward_bg">

            <ImageView
                android:id="@+id/imageView7"
                style="@style/music_recycler_view_list_item_btn_image"
                android:layout_marginBottom="8dp"
                android:text="Skrilex and Dipplo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35000002"
                app:srcCompat="@drawable/ic_forward_white_18dp" />

            <com.hellodemo.ui.MemphisTextView
                style="@style/music_recycler_view_item_btn"
                custom:fontType="light"
                android:text="@string/forward"
                android:paddingTop="4dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView7"
                app:layout_constraintStart_toStartOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_wrapper"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/delete"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:background="@color/color_delete_bg">

            <ImageView
                android:id="@+id/imageView9"
                style="@style/music_recycler_view_list_item_btn_image"
                android:layout_marginBottom="8dp"
                android:text="Skrilex and Dipplo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35000002"
                app:srcCompat="@drawable/item_delete" />

            <com.hellodemo.ui.MemphisTextView
                style="@style/music_recycler_view_item_btn"
                custom:fontType="light"
                android:text="@string/delete"
                android:paddingTop="4dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView9"
                app:layout_constraintStart_toStartOf="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/music_recycler_view_list_item_bg_image"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:src="@drawable/image_white"
            app:civ_border="true"
            app:civ_border_width="@dimen/_2sdp"
            app:civ_border_color="@color/color_delete_bg"
            app:civ_shadow="true"
            app:civ_shadow_color="#ffffff"
            app:civ_shadow_radius="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/notification_avatar"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:src="@drawable/profile"
            app:civ_border="true"
            app:civ_border_color="@color/white"
            app:civ_border_width="@dimen/_3sdp"
            app:civ_shadow="true"
            app:civ_shadow_color="#ffffff"
            app:civ_shadow_radius="0"
            app:layout_constraintBottom_toBottomOf="@+id/music_recycler_view_list_item_bg_image"
            app:layout_constraintEnd_toEndOf="@+id/music_recycler_view_list_item_bg_image"
            app:layout_constraintStart_toEndOf="@+id/music_recycler_view_list_item_bg_image"
            app:layout_constraintStart_toStartOf="@+id/music_recycler_view_list_item_bg_image"
            app:layout_constraintTop_toTopOf="@+id/music_recycler_view_list_item_bg_image"
            app:layout_constraintVertical_bias="0.45"
            app:srcCompat="@drawable/profile" />


        <com.hellodemo.ui.MemphisTextView
            android:id="@+id/notification_text"
            style="@style/music_title_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:text="The Sad but true story of ray mingj nlkj;fje;jwe;l "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:singleLine="true"
            android:ellipsize="marquee"
            app:layout_constraintStart_toEndOf="@+id/notification_avatar"
            app:layout_constraintTop_toTopOf="@+id/notification_avatar" />

        <com.hellodemo.ui.MemphisTextView
            android:id="@+id/notification_subtext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:ems="50"
            android:maxLines="1"
            android:text="Skrilex and Dipplo"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/notification_avatar"
            app:layout_constraintEnd_toEndOf="@+id/notification_text"
            app:layout_constraintStart_toStartOf="@+id/notification_text"
            app:layout_constraintTop_toBottomOf="@+id/notification_text"
            app:layout_constraintVertical_bias="0.0"
            custom:fontType="light"

            />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/txt_secondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/unreadNotificationView"
            android:layout_width="@dimen/_4sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/circle_drawable"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/notification_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.228" />
    </android.support.constraint.ConstraintLayout>

</com.daimajia.swipe.SwipeLayout>