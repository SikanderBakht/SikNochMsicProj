<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--tools:context=".fragment.MusicPlayerFragment">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/fragment_content11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_profile_settings"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/profile"
                    app:civ_border_width="0dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="#acacac"
                    app:civ_shadow_radius="0"
                    android:scaleType="centerCrop"

                    />

                <com.hellodemo.ui.MemphisTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="EDIT"
                    android:textColor="@android:color/white"
                    android:textColorLink="@android:color/white"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

            <com.hellodemo.ui.MemphisTextView
                android:id="@+id/full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:lines="1"
                android:scrollHorizontally="false"
                android:text="Mike Rossi"
                android:textColor="#2a2d34"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.hellodemo.ui.MemphisTextView
                android:id="@+id/textemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/img_profile"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/img_profile"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:lines="1"
                android:scrollHorizontally="false"
                android:text="Mike.Rossi@hello-demo.com"
                android:textColor="#2a2d34" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <com.hellodemo.ui.MemphisTextView
                android:id="@+id/account_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="ACCOUNT" />

            <ListView
                android:id="@+id/account_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />


            <com.hellodemo.ui.MemphisTextView
                android:id="@+id/social_account_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="SOCIAL PROFILES"
                android:visibility="gone"
                />

            <ListView
                android:id="@+id/social_accounts_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />


            <com.hellodemo.ui.MemphisTextView
                android:id="@+id/linked_account_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="LINK ACCOUNTS"
                android:visibility="gone"
                />

            <ListView
                android:id="@+id/linked_account_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>
     </LinearLayout>
        <RelativeLayout
            android:id="@+id/loading_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#a1a1a1"
            android:paddingBottom="50dp">

            <ImageView
                android:id="@+id/loading_icon1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/loader_animation" />
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>